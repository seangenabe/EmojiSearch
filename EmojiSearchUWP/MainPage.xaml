    mc:Ignorable="d" 
    Loaded="Page_Loaded"
    Height="72.992" Width="187.754">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,-254,-151">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
