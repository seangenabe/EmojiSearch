        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <TextBox Text="{Binding Query}" Height="31" Grid.Column="0" VerticalAlignment="Center" BorderThickness="0"/>
          <TextBlock Text="&#xE11A;" FontFamily="Segoe UI Symbol" Grid.Column="1" VerticalAlignment="Center"/>
        </Grid>
      </Border>
      <Grid Grid.Column="1">
        <Button >ssdf</Button>
      </Grid>
    </Grid>
    <Grid Grid.Row="1">
      <ItemsControl>
        
      </ItemsControl>
    </Grid>
  </Grid>
</Page>
